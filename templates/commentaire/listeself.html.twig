{% extends 'base.html.twig' %}
{% block title %}Commentaires{% endblock %}
{% block soustitre %}Vos Commentaires{% endblock %}
{% block body %}
    {% for comm in app.user.getCommentaires() %}
    <div class="ligne-wrapper">
        <div>Id : {{ comm.id }}</div>
        <div>Note : {{ comm.note }}/5</div>
        <div>Message : {{ comm.message }}</div>
        <div>Posté le : {{ comm.datePost.format('d M Y') }} </div>
    </div>
    <a class="but shadow" href={{ path("commentaire.supprimer", {'id':comm.id}) }}>Supprimer</a>
    {% else %}
    Vous n'avez posté aucun commentaire.
    {% endfor %}
{% endblock %}

